{
    "openapi": "3.0.0",
    "info": {
        "title": "My First API",
        "version": "0.1"
    },
    "paths": {
        "/": {
            "get": {
                "tags": [
                    "Status check"
                ],
                "description": "Home page",
                "responses": {
                    "default": {
                        "description": "Welcome page"
                    }
                }
            }
        },
        "/custom-query": {
            "get": {
                "tags": [
                    "DATABASE QUERY ENGINE"
                ],
                "summary": "Get list of custom queries",
                "operationId": "execute-custom-queries",
                "responses": {
                    "200": {
                        "description": "success",
                        "content": {
                            "application/json": {}
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "DATABASE QUERY ENGINE"
                ],
                "summary": "Create new query",
                "operationId": "store-custom-query",
                "requestBody": {
                    "content": {
                        "application/x-www-form-urlencoded": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "queryName": {
                                        "description": "Unique query name",
                                        "type": "string",
                                        "required": true,
                                        "default": "mongo"
                                    },
                                    "databaseType": {
                                        "description": "Storage types: 1 - mysql, 2 - mongodb, 3 - clickhouse",
                                        "type": "integer",
                                        "default": 2,
                                        "enum": [1, 2, 3],
                                        "required": true
                                    },
                                    "query": {
                                        "description": "Database query body. Specific format for mongo - (collection - collection name, body - condition). For MySQL - SQL Query",
                                        "type": "string",
                                        "default": "{\"collection\": \"notifications\",  \"body\" : {\"order_id\": {ORDER_ID}}}",
                                        "required": true
                                    },
                                    "description": {
                                        "description": "Information about query",
                                        "type": "string",
                                        "required": true
                                    }
                                },
                                "required": ["queryName", "databaseType", "query", "description"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "success"
                    }
                }
            }
        },
        "/custom-query/execute": {
            "post": {
                "tags": [
                    "DATABASE QUERY ENGINE"
                ],
                "summary": "Execute query and get results",
                "operationId": "execute-custom-query",
                "consumes": [
                    "application/x-www-form-urlencoded"
                ],
                "produces": [
                    "application/json",
                    "text/xml"
                ],
                "parameters": [
                    {
                        "name": "queryName",
                        "in": "formData",
                        "description": "Unique query name",
                        "required": true,
                        "default": "mongo",
                        "type": "string"
                    },
                    {
                        "name": "dqeAccessToken",
                        "in": "formData",
                        "description": "database query engine access token",
                        "required": true,
                        "default": "123123123",
                        "type": "string"
                    },
                    {
                        "name": "params",
                        "in": "formData",
                        "description": "query params",
                        "required": false,
                        "default": "{\"ORDER_ID\": 7318461}",
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "success"
                    }
                }
            }
        },
        "/custom-query/{id}/change-status/{status}": {
            "put": {
                "tags": [
                    "DATABASE QUERY ENGINE"
                ],
                "summary": "Chance query status. Only for admin users",
                "operationId": "custom-query-change-status",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Unique query id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "status",
                        "in": "path",
                        "description": "Statuses: 2 - STATUS_APPROVED, 4 - STATUS_BLOCKED",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "success"
                    }
                }
            }
        },
        "/custom-query/{name}": {
            "get": {
                "tags": [
                    "DATABASE QUERY ENGINE"
                ],
                "summary": "Get custom query by name",
                "operationId": "get-custom-query",
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "description": "Unique query name",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "default": "testCustomQuery"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "success"
                    }
                }
            }
        },
        "/custom-query/{id}/logs": {
            "get": {
                "tags": [
                    "DATABASE QUERY ENGINE"
                ],
                "summary": "Get query logs",
                "operationId": "get-custom-query-logs",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Unique query id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "Last logs count",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "success"
                    },
                    "403": {
                        "description": "forbidden"
                    }
                }
            }
        }
    }
}
